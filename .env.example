# Database (Prisma Postgres)
DATABASE_URL="postgres://YOUR_CONNECTION_STRING"

# Resend â€” for sending emails (https://resend.com/api-keys)
RESEND_API_KEY="re_YOUR_API_KEY_HERE"

# Email you want to SEND FROM (must be verified domain in Resend, or use onboarding@resend.dev for testing)
EMAIL_FROM="onboarding@resend.dev"

# Email you want to RECEIVE lead notifications at
NOTIFICATION_EMAIL="you@yourdomain.com"

# Telegram Bot (create via @BotFather on Telegram)
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
TELEGRAM_CHAT_ID="YOUR_CHAT_ID_HERE"

# Admin password for /admin dashboard
ADMIN_PASSWORD="change-this-to-a-strong-password"

# Encryption key for SMTP credentials at rest (32+ characters required)
ENCRYPTION_KEY="your-32-character-encryption-key-here!!"

# Custom tracking domain (CNAME pointing to your Vercel app)
TRACKING_DOMAIN="https://t.yourdomain.com"

# Primary outreach sending domain
SENDING_DOMAIN="yourdomain.com"

# Mailcow server hostname
MX_HOST="mail.yourdomain.com"

# MTA-STS enforcement mode ("testing" or "enforce")
MTA_STS_MODE="testing"

# Webhook URLs for external integrations (comma-separated)
WEBHOOK_URLS=""

# Email verification proxy (deployed separately on VPS)
VERIFY_PROXY_URL="http://your-vps-ip:3001"
VERIFY_PROXY_SECRET="your-hmac-shared-secret"

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com"

# Seed accounts for inbox placement testing (comma-separated)
SEED_ACCOUNTS=""

# Cron job secret (Vercel uses this to authenticate cron requests)
CRON_SECRET=""
