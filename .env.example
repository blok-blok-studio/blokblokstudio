# Database (Prisma Postgres)
DATABASE_URL="postgres://YOUR_CONNECTION_STRING"

# Resend — for sending emails (https://resend.com/api-keys)
RESEND_API_KEY="re_YOUR_API_KEY_HERE"

# Email you want to SEND FROM (must be verified domain in Resend, or use onboarding@resend.dev for testing)
EMAIL_FROM="onboarding@resend.dev"

# Email you want to RECEIVE lead notifications at (optional — leave empty if using Telegram only)
NOTIFICATION_EMAIL=""

# Telegram Bot (create via @BotFather on Telegram)
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
TELEGRAM_CHAT_ID="YOUR_CHAT_ID_HERE"

# Admin password for /admin dashboard
ADMIN_PASSWORD="change-this-to-a-strong-password"

# MTA-STS email security (optional — defaults shown)
# SENDING_DOMAIN="blokblokstudio.com"
# MX_HOST="mail.blokblokstudio.com"
# MTA_STS_MODE="testing"

# EasyReach CRM webhook (forwards form submissions to your CRM)
EASYREACH_WEBHOOK_URL=""
EASYREACH_WEBHOOK_SECRET=""
