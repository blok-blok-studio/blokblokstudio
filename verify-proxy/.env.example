# REQUIRED: Shared secret for HMAC signing (min 32 chars)
# Generate one: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
SHARED_SECRET=paste-your-generated-secret-here

# Port to listen on
PORT=3001

# Optional: Comma-separated IP allowlist (leave empty to allow all)
# You can add your Vercel deployment IPs here for extra lockdown
ALLOWED_IPS=

# Max emails per batch request
MAX_BATCH=50
